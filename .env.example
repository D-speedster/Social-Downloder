# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Database Configuration (Optional - MySQL)
USE_MYSQL=false
DB_HOST=localhost
DB_USER=admin
DB_PASSWORD=your_db_password
DB_NAME=bot_db

# File Paths
COOKIE_FILE_PATH=./cookie.txt
FFMPEG_PATH=ffmpeg

# Proxy Configuration (Optional)
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Job Recovery Settings
RECOVER_JOBS_ON_STARTUP=false
RECOVERY_NOTIFY_USERS=false

# Telegram Throttling Configuration
# These settings help prevent rate limiting and improve upload reliability

# Sleep threshold - how long to wait when rate limited (seconds)
TELEGRAM_SLEEP_THRESHOLD=300

# Flood sleep threshold - how long to wait for flood errors (seconds)
TELEGRAM_FLOOD_SLEEP_THRESHOLD=120

# Maximum concurrent transmissions (reduce to avoid rate limits)
TELEGRAM_MAX_CONCURRENT=2

# Maximum workers (reduce to avoid rate limits)
TELEGRAM_MAX_WORKERS=4

# Upload delays for different file sizes (seconds)
TELEGRAM_UPLOAD_DELAY_SMALL=0.1    # Files < 10MB
TELEGRAM_UPLOAD_DELAY_MEDIUM=0.2   # Files 10-50MB
TELEGRAM_UPLOAD_DELAY_LARGE=0.5    # Files > 50MB

# Retry configuration
TELEGRAM_RETRY_ATTEMPTS=3          # Number of retry attempts
TELEGRAM_BASE_RETRY_DELAY=1.0      # Base delay for retries (seconds)